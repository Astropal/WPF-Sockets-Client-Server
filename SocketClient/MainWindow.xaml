<Window x:Class="SocketClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid Background="#FF263238">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap" Text="IP:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="txtIP" Width="61" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Center" Margin="10,0"/>
            <TextBlock TextWrapping="Wrap" Text="Port:" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="White"/>
            <TextBox x:Name="txtPort" Width="36" TextWrapping="Wrap" Text="3000" VerticalAlignment="Center" Margin="10,0"/>
            <Button x:Name="btnStartServer" Content="Connexion" Click="btnLinkServer_Click" Margin="30,0"/>
        </DockPanel>
        <ListBox x:Name="lbInfo"  Grid.Row="1" Margin="20,0"/>
        <DockPanel Grid.Row="2" Margin="20,0">
            <Button x:Name="btnSend" Content="Envoyer MSG" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="75" Click="btnSend_Click" DockPanel.Dock="Right"/>
            <TextBox x:Name="txtInput" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Center"  />
        </DockPanel>
    </Grid>
</Window>
